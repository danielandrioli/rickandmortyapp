<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.fragments.FilterFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="FILTER"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="@dimen/tv_chip_group_size" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatusAlive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Alive"
                android:textSize="@dimen/chip_text_size" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatusDead"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Dead"
                android:textSize="@dimen/chip_text_size" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatusUnknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:checkable="true"
                android:text="Unknown"
                android:textSize="@dimen/chip_text_size" />
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gender"
            android:textSize="@dimen/tv_chip_group_size" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGenderFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:checkable="true"
                android:text="Female"
                android:textSize="@dimen/chip_text_size" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGenderMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:checkable="true"
                android:text="Male"
                android:textSize="@dimen/chip_text_size" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGenderGenderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:checkable="true"
                android:text="Genderless"
                android:textSize="@dimen/chip_text_size" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGenderUnknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:checkable="true"
                android:text="Unknown"
                android:textSize="@dimen/chip_text_size" />
        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="Apply"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>